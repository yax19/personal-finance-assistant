<h1>Dashboard</h1>
<a href="/users/<%= user._id %>/transactions/add" style="display: inline-block; padding: 0.5rem 1rem; background-color: #333; color: #fff; text-decoration: none; border-radius: 5px;">Add Transaction</a>
<table border="1">
  <thead>
    <tr>
      <th>Type</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Date</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% transactions.forEach(transaction => { %>
      <tr>
        <td><%= transaction.type %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.category %></td>
        <td><%= transaction.date.toLocaleDateString() %></td>
        <td><%= transaction.description %></td>
        <td>
          <a href="/users/<%= user._id %>/transactions/edit/<%= transaction._id %>" style="margin-right: 0.5rem; color: #333; text-decoration: none;">Edit</a>
          <a href="/users/<%= user._id %>/transactions/delete/<%= transaction._id %>" style="color: #333; text-decoration: none;">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
