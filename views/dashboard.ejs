<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FinTrack - Personal Finance App</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body, html {
      height: 100%;
      width: 100%;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #343de7;
      font-family: Arial, sans-serif;
    }
    .dashboard-container {
      background-color: #fff;
      padding: 3rem;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 800px;
      text-align: center;
    }
    .dashboard-container h2 {
      margin-bottom: 2rem;
    }
    .balance-overview {
      margin-bottom: 2rem;
    }
    .balance-overview p {
      font-size: 1.5rem;
      margin: 0.5rem 0;
    }
    .transactions-list {
      list-style: none;
      padding: 0;
    }
    .transactions-list li {
      background-color: #f9f9f9;
      margin-bottom: 1rem;
      padding: 1.5rem;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .transactions-list li:hover {
      background-color: #e9e9e9;
    }
    .transactions-list li p {
      margin: 0;
    
    }
    .transactions-list li .amount {
      font-weight: bold;
 
      
    }
    .add-transaction-btn {
      display: inline-block;
      padding: 0.7rem 1.5rem;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-align: center;
      margin-top: 2rem;
    }
    .add-transaction-btn:hover {
      background-color: #555;
    }
    .edit-btn {
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 0.5rem 1rem;
      cursor: pointer;
      text-decoration: none;
      position: fixed;

      
    }
    .edit-btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <h2>Dashboard</h2>
    <div class="balance-overview">
      <p>Total Balance: $<%= totalBalance %></p>
      <p>Total Income: $<%= totalIncome %></p>
      <p>Total Expenses: $<%= totalExpenses %></p>
      <p>Total Savings: $<%= totalSavings %></p>
    </div>
    <h3>Recent Transactions</h3>
    <ul class="transactions-list">
      <% transactions.forEach(transaction => { %>
        <li>
          <div>
            <p><%= transaction.name %></p>
            <p><%= transaction.category %> â€¢ <%= transaction.date.toLocaleDateString() %></p>
          </div>
          <div>
            <p class="amount <%= transaction.amount > 0 ? 'text-green-500' : 'text-red-500' %>">
              <%= transaction.amount > 0 ? '+' : '' %>$<%= transaction.amount.toFixed(2) %>
            </p>
            <a href="/users/<%= user._id %>/transactions/edit/<%= transaction._id %>" class="edit-btn">Edit</a>
          </div>
        </li>
      <% }) %>
    </ul>
    <a href="/users/<%= user._id %>/transactions/add" class="add-transaction-btn">Add Transaction</a>
  </div>
</body>
</html>
