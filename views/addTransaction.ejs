<h1>Add Transaction</h1>
<form action="/users/<%= user._id %>/transactions/add" method="POST">
  <label for="type">Type:</label>
  <select id="type" name="type" required>
    <option value="income">Income</option>
    <option value="expense">Expense</option>
  </select>
  <label for="amount">Amount:</label>
  <input type="number" id="amount" name="amount" required>
  <label for="category">Category:</label>
  <input type="text" id="category" name="category" required>
  <label for="description">Description:</label>
  <input type="text" id="description" name="description">
  <a href="/users/<%= user._id %>/transactions/add" style="display: inline-block; padding: 0.5rem 1rem; background-color: #333; color: #fff; text-decoration: none; border-radius: 5px;">Add Transaction</a>
</form>
